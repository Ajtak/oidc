 <!DOCTYPE html>
 <html>
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=UTF-8" />
    <title>$services.localization.render('oidc.template.consent.title')</title>

    <style type="text/css">
      body{
        background-color: gray;
        font-family: sans-serif;
        font-size: 87.5%;
      }
      #content{
        margin: 1em auto;
        width: 80%;
        color: #4D4D4D;
        border: 1px solid #E8E8E8;
        background-color: #FFF;
        border-radius: 4px;
        box-shadow: 0px 0px 7px #E8E8E8;
        padding: 1em;
      }
    </style>
  </head>
  <body>
    <div id="content">
      <form class="xform">
        ## Make sure the answer actually come from the form
        <input type="hidden" name="form_token" value="$!{services.csrf.getToken()}" />

        ## Repeat input parameters
        #foreach ($entry in $oidc.httprequest.queryParameters.entrySet())
          #if ($entry.key != 'consent_accept' || $entry.key != 'consent_refuse' || $entry.key != 'form_token')
            <input type="hidden" name="$escapetool.xml($entry.key)" value="$escapetool.xml($entry.value)"/>
          #end
        #end

        ## Ask the consent
        $escapetool.xml($services.localization.render('oidc.template.consent.question', [$oidc.request.redirectionURI]))

        $escapetool.xml($services.localization.render('oidc.template.consent.clais.scope'))
        #set($scope = $oidc.request.scope)
        #if (!$scope.isEmpty())
          <ul>
            #foreach($scopeValue in $scope)
              <li>$scopeValue</li>
            #end
          </ul>
        #end

        $escapetool.xml($services.localization.render('oidc.template.consent.clais.idtoken'))
        #set($idTokenClaims = $oidc.request.getIDTokenClaims())
        #if (!$idTokenClaims.isEmpty())
          <ul>
            #foreach($claim in $idTokenClaims)
              <li>$claim</li>
            #end
          </ul>
        #end

        $escapetool.xml($services.localization.render('oidc.template.consent.clais.userinfo'))
        #set($userInfoClaims = $oidc.request.getUserInfoClaims())
        #if (!$userInfoClaims.isEmpty())
          <ul>
            #foreach($claim in $userInfoClaims)
              <li>$claim</li>
            #end
          </ul>
        #end

        <br/><br/>

        <input type="submit" name="consent_accept" value="$escapetool.xml($services.localization.render('oidc.template.consent.answer.accept'))"/>
        <input type="submit" name="consent_refuse" value="$escapetool.xml($services.localization.render('oidc.template.consent.answer.refuse'))"/>
      </form>
    </div>
  </body>
</html>
